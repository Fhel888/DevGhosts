<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appblessfuture">
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logoic"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/logoic"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppBlessFuture"
        tools:targetApi="31">
        <activity
            android:name=".ConsultarProcesso"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".CriarProcesso"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Menu"
            android:exported="false" />
        <activity
            android:name=".Configuracao"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".RecuperarSenha"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Cadastro"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>